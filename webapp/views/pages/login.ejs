<!DOCTYPE html>
<html lang="en">
<head>
    <title>Event Manager</title>
    <% include ../partials/header.ejs %>
</head>
<body class="page-login">
    <div class="container">
        <div class="panel panel-default col-md-4 col-md-offset-4">
            <div class="center-block login-form-container panel-body">
                <% if (typeof errors != 'undefined') { %>
                    <div class="alert alert-danger">
                        <% errors.forEach(function(error) { %>
                            <div><%= error %></div>
                        <% }) %>
                    </div>
                <% } %>
                <form id="form-login" action="/login" method="POST" class="form-horizontal">
                    <input id="username" name="username" type="text" class="form-control" placeholder="Username" />
                    <input id="password" name="password" type="password" class="form-control" placeholder="Password" />
                    <input id="submit" type="submit" value="Log in" class="btn btn-default" />
                </form>

                <div style="margin-top: 1em">
                    <em>Or use an <a href="/invitation/welcome">invite code.</a></em>
                </div>
            </div>
        </div>
    </div>
</body>
</html>